<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.3 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">

    <url-mapping id="home">
        <pattern value="/" />
        <view-id value="/index.xhtml" />
    </url-mapping>

    <url-mapping id="thing">
        <pattern value="/thing/#{thingID:thingBean.thingID}/" />
        <view-id value="/thing.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login/" />
        <view-id value="/login.xhtml" />
    </url-mapping>

    <url-mapping id="logout">
        <pattern value="/logout/" />
        <view-id value="/logout.xhtml" />
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register/" />
        <view-id value="/register.xhtml" />
    </url-mapping>

    <url-mapping id="activate">
        <pattern value="/activate/" />
        <view-id value="/activate.xhtml" />
    </url-mapping>

    <url-mapping id="error">
        <pattern value="/error/" />
        <view-id value="/error.xhtml" />
    </url-mapping>

</pretty-config>